@{
    ViewData["Title"] = "People Page";
    Layout = "~/Views/Shared/_CategoryLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Person Index</title>
</head>
<body>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
    <h2>People List</h2>
    <h3>@ViewBag.x</h3>
    <br />
    <table class="table table-bordered">
        <tr>
            <td>ID</td>
            <td>Image</td>
            <td>Person Name</td>
            <td>Person Surname</td>
            <td>Person Phone</td>
            <td>Person E-mail</td>
            <td>Category Name</td>
            <td>Delete</td>
            <td>Update</td>
        </tr>
        <tr>
            @await Component.InvokeAsync("FilteredCategory", new { id = ViewBag.x })
        </tr>
    </table>
    <a href="/Person/AddPerson" class="btn btn-primary">New Person</a>
</body>
</html>