@model List<Web_Homework.Models.Person>
@foreach (var item in Model)
{
    <td>@item.PersonID</td>
    <td><img src="@item.ImageUrl" class="img-fluid p-1" style="width:100px; height:100px" /></td>
    <td>@item.PersonName</td>
    <td>@item.PersonSurname</td>
    <td>@item.PersonPhone</td>
    <td>@item.PersonEmail</td>
    <td><a href="/Person/DeletePerson/@item.PersonID" class="btn btn-danger">Delete</a></td>
    <td><a href="/Person/GetPerson/@item.PersonID" class="btn btn-success">Update</a></td>
}