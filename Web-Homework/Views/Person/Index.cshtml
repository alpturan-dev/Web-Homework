@using X.PagedList;
@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;
@model IPagedList<Web_Homework.Models.Person>

@{
    ViewData["Title"] = "People Page";
    Layout = "~/Views/Shared/_RoleLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Person Index</title>
</head>
<body>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
    <h2>People List</h2>
    <br />
    <table class="table table-bordered">
        <tr>
            <td>ID</td>
            <td>Image</td>
            <td>Person Name</td>
            <td>Person Surname</td>
            <td>Person Phone</td>
            <td>Person E-mail</td>
            <td>Role Name</td>
            <td>Delete</td>
            <td>Update</td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PersonID</td>
                <td><img src="@item.ImageUrl" class="img-fluid p-1" style="width:100px; height:100px" /></td>
                <td>@item.PersonName</td>
                <td>@item.PersonSurname</td>
                <td>@item.PersonPhone</td>
                <td>@item.PersonEmail</td>
                <td>@item.Role.RoleName</td>
                <td><a href="/Person/DeletePerson/@item.PersonID" class="btn btn-danger">Delete</a></td>
                <td><a href="/Person/GetPerson/@item.PersonID" class="btn btn-success">Update</a></td>
            </tr>
        }
    </table>
    <a href="/Person/AddPerson" class="btn btn-primary">New Person</a>

</body>
</html>