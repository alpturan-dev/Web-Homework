@{
    ViewData["Title"] = "People Page";
    Layout = "~/Views/Shared/_RoleLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Person Index</title>
</head>
<body>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
    <h2>People List</h2>
    <br />
    <table class="table table-bordered">
        @await Component.InvokeAsync("FilteredRole", new { id = ViewBag.x })
    </table>
    <a href="/Person/AddPerson" class="btn btn-primary">New Person</a>
</body>
</html>