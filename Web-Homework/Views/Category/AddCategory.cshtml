@model Web_Homework.Models.Category

@{
    ViewData["Title"] = "Category Page";
    Layout = "~/Views/Shared/_Layout.cshtml"; ;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Category Index</title>
</head>
<body>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
    <h2>Add Category Page</h2>
    <br />
    @using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
    {
        @Html.LabelFor(category => category.CategoryName)
        @Html.TextBoxFor(category => category.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(category => category.CategoryName, "", new { @style = "color:red" })
        <br />
        @Html.LabelFor(category => category.CategoryDescription)
        @Html.TextBoxFor(category => category.CategoryDescription, new { @class = "form-control" })
        <br />
        <button class="btn btn-info">Save</button>
    }
</body>
</html>
